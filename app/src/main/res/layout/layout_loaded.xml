<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/loading_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_loaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="gone" />

        <TextView
            android:id="@+id/tv_loaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/px_60"
            android:layout_marginRight="@dimen/px_60"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/px_10"
            android:text="@string/load_error_text"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/px_text_30"
            android:visibility="gone" />
    </LinearLayout>

    <com.saipeisi.expressgold.view.customview.CustomLoadingView
        android:id="@+id/customLoadingView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</RelativeLayout>
